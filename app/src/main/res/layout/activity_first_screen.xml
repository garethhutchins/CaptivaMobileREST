<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="otmobile.FirstScreen"
    android:background="@android:color/white"
    android:id="@+id/firstscreenRL">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@android:color/holo_green_dark"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_preferences"
        app:fabSize="normal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        app:backgroundTint="#00b8ba"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:background="@android:color/holo_green_dark"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_gallery"
        app:fabSize="normal"
        android:layout_above="@+id/floatSettings"
        android:layout_alignStart="@+id/floatSettings"
        app:backgroundTint="#4f3690"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@android:color/holo_green_dark"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_camera"
        app:fabSize="normal"
        android:layout_above="@+id/floatingGallery"
        android:layout_alignStart="@+id/floatingGallery"
        app:backgroundTint="#09bcef"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/floatingCamera"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="43dp"
        android:src="@drawable/otcontent" />


</RelativeLayout>
